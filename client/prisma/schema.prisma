generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEV_DATABASE_URL")
}

model User {
  id       String     @id @unique
  email    String     @unique
  username String     @unique
  hashed_password String @unique
  UserList UserList[]
  Session Session?
  @@map("user")
}

model Session {
  id        String   @id
  userId    String @unique
  expiresAt DateTime
  user      User    @relation(fields: [userId], references: [id])
  @@map("session")
}

model UserList {
  id        Int     @id @default(autoincrement())
  userId    String @unique 
  user      User    @relation(fields: [userId], references: [id])
  @@map("user_list")
}

model Seasons {
  id        Int     @id @default(autoincrement())
  seasonYearCategory String @unique
  season    String 
  year      Int
  anime     Anime[] 
  updatedAt DateTime
  category String 
  @@map("seasons")
}

model Anime {
  dbID     Int     @id @default(autoincrement())
  id        Int     
  seasonInfo Seasons @relation(fields: [entry], references: [seasonYearCategory], onDelete: Cascade)
  entry     String
  category String 
  season  String 
  year   Int
  title   String
  episodes Int?
  genres Json[]
  score Float?
  synopsis String?
  studios Json[]
  source String?
  images Json?
  members Int
  broadcast Json?
  aired Json?
  isCurrentlyAiring String
  @@map("anime")
}